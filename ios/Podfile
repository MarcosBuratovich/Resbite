# Define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Set deployment target for all pods
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Fix for Xcode 14+ - remove ARCHS and add compiler flags
      config.build_settings.delete 'ARCHS'
      
      # Comprehensive fix for the -G flag issue
      if config.build_settings['OTHER_CFLAGS'] != nil
        config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS'].gsub('-G', '')
      end
      if config.build_settings['OTHER_LDFLAGS'] != nil
        config.build_settings['OTHER_LDFLAGS'] = config.build_settings['OTHER_LDFLAGS'].gsub('-G', '')
      end
      if config.build_settings['OTHER_SWIFT_FLAGS'] != nil
        config.build_settings['OTHER_SWIFT_FLAGS'] = config.build_settings['OTHER_SWIFT_FLAGS'].gsub('-G', '')
      end
      
      # Additional fixes for compilation flags
      config.build_settings['GCC_OPTIMIZATION_LEVEL'] = '0'
      
      # Remove any problematic flags from OTHER_CPLUSPLUSFLAGS
      if config.build_settings['OTHER_CPLUSPLUSFLAGS'] != nil
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS'].gsub('-G', '')
      end
      
      # Fix for OTHER_MODULE_VERIFIER_FLAGS
      if config.build_settings['OTHER_MODULE_VERIFIER_FLAGS'] != nil
        config.build_settings['OTHER_MODULE_VERIFIER_FLAGS'] = config.build_settings['OTHER_MODULE_VERIFIER_FLAGS'].gsub('-G', '')
      end
      
      # Explicitly set compiler version
      config.build_settings['COMPILER_INDEX_STORE_ENABLE'] = 'NO'
    end
  end
end
